<form action="/categories" method="post">
  Category Name:
  <input type="text" name="name">
  Description:
  <input type="text" name="description">
  <input type="submit">
</form>

<ul>
  <% categories.forEach(category => { %>
    <li><%= category.name %>, <%= category.description %></li>
  <% }) %>
</ul>
